# Google Gemini API Configuration
# Get your API key from Google AI Studio: https://aistudio.google.com/app/apikey
# Or use gcloud CLI: gcloud services api-keys get-key-string <key-id>
GOOGLE_GEMINI_API_KEY=your_api_key_here

# Google Cloud Project
GCP_PROJECT_ID=ledesign

# Vercel Deployment
# Get your token from: https://vercel.com/account/tokens
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# Development
NODE_ENV=development

# Database (Turso/LibSQL)
# For local development: use file:local.db
# For production: use your Turso database URL
TURSO_DB_URL=file:local.db
TURSO_DB_TOKEN=

# NextAuth
NEXTAUTH_SECRET=your-secret-key-here-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# Google OAuth 2.0
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:4000/api/auth/google/callback

# Application URL (used for OAuth callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:4000

# JWT Secret (for custom auth)
JWT_SECRET=your-jwt-secret-change-this-in-production

# SendGrid Email Service
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-api-key-here

# Email Verification
# Set to 'true' to require email verification before login
REQUIRE_EMAIL_VERIFICATION=false

# Stripe Payment Processing (for LeCoin donations)
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal Payment Processing (for LeCoin donations)
# Get your credentials from: https://developer.paypal.com/dashboard/applications/sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# Mercado Pago Payment Processing (for LeCoin donations - Chilean supporters)
# Get your credentials from: https://www.mercadopago.cl/developers/panel/app
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token_here
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key_here
