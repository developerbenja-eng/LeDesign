{
  "name": "ledesign",
  "version": "1.0.0",
  "private": true,
  "description": "LeDesign - Plataforma de Ingeniería Chilena para diseño estructural, hidráulico, pavimentos y vial",
  "scripts": {
    "setup": "node scripts/setup-env.js",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "vercel:setup": "bash scripts/vercel-setup.sh",
    "vercel:status": "bash scripts/vercel-status.sh",
    "deploy:preview": "bash scripts/vercel-deploy.sh preview",
    "deploy:prod": "bash scripts/vercel-deploy.sh production"
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.4",
    "dotenv": "^17.2.3",
    "playwright": "^1.57.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.4",
    "typescript": "^5.7.3"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  }
}
