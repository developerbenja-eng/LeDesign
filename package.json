{
  "name": "ledesign",
  "version": "1.0.0",
  "private": true,
  "description": "Unified engineering design platform for structural, hydraulic, pavement, and road design",
  "scripts": {
    "setup": "node scripts/setup-env.js",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.4",
    "dotenv": "^17.2.3",
    "prettier": "^3.4.2",
    "turbo": "^2.3.4",
    "typescript": "^5.7.3"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0"
  }
}
